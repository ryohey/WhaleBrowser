body
  background-color: #101010
  line-height: 1.7
  color: white
  font-family: "Yu Gothic"
  margin: 0

#app
  .content
    padding-top: 4em

.IndexPage
  .content
    display: flex

.DatabasePage
  .content
    padding: 4em 2em
  table
    width: 100%
    font-size: 80%
    border-collapse: collapse
    line-height: 3
    margin-bottom: 2em
    td
      border-bottom: 1px solid rgba(255, 255, 255, 0.15)
    th
      border-bottom: 2px solid rgba(255, 255, 255, 0.15)

.search-bar
  display: flex
  align-items: center
  height: 100%

  >*
    margin-right: 1em

.MovieList
  overflow: hidden
  width: calc(100% - 15em)
  border-right: 1px solid #404040

  // WayPoint
  >span
    display: block
    clear: both

  .movie.selected
    transform: scale(0.95)

  .movie
    cursor: pointer
    box-sizing: border-box
    transition: 0.2s ease all
    width: 17em
    height: 13em
    margin: 2px
    position: relative
    float: left
    overflow: hidden

    .image
      overflow: hidden

      img
        position: absolute
        min-width: 100%
        min-height: 100%

    .image::after
      content: ""
      width: 100%
      height: 100%
      position: absolute
      top: 0
      left: 0
      background: linear-gradient(to bottom, rgba(0,0,0,0) 0%,rgba(0,0,0,0) 57%,rgba(0,0,0,0.74) 100%)

    .name
      position: absolute
      bottom: 1.4em
      left: 1em
      width: 100%
      overflow: hidden
      white-space: nowrap
      text-overflow: ellipsis
      font-size: 90%
      font-weight: bold

    .time
      position: absolute
      bottom: 0em
      left: 1em
      font-size: 80%
      opacity: 0.5

#preview
  position: fixed
  right: 0
  width: 15em
  padding: 1em
  box-sizing: border-box
  height: 100%
  overflow: auto

  img
    width: 12em

  dt
    font-weight: bold

  dd
    margin-left: 0
    margin-bottom: 1em
